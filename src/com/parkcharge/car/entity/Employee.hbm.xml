<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.parkcharge.car.entity">
	<class name="Employee" table="employee">
		<comment>人员信息</comment>
		<id name="id" column="employee_id">
			<generator class="increment" />
		</id>

		<property name="name">
			<column name="name" length="50" not-null="true">
				<comment>姓名</comment>
			</column>
		</property>
		<property name="id_card">
			<column name="id_card" length="50" not-null="true">
				<comment>身份证号</comment>
			</column>
		</property>
		<property name="gender">
			<column name="gender" length="10" not-null="true">
				<comment>性别</comment>
			</column>
		</property>
		<property name="age">
			<column name="age" not-null="true" default="0">
				<comment>年龄</comment>
			</column>
		</property>

		<set name="cars" table="car">
			<key column="car_id" />
			<one-to-many class="Car" />
		</set>
	</class>
</hibernate-mapping>
