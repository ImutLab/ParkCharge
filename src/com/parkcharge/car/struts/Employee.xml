<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="Employee" namespace="/Employee" extends="struts-global">
		<!-- 页面显示部分 -->
		<action name="addPage" class="com.parkcharge.car.action.EmployeeAction"
			method="addPage">
			<result name="success">/jsp/Employee/addPage.jsp</result>
		</action>
		<action name="editPage" class="com.parkcharge.car.action.EmployeeAction"
			method="editPage">
			<result name="success">/jsp/Employee/editPage.jsp</result>
		</action>
		<action name="jsonListPage" class="com.parkcharge.car.action.EmployeeAction"
			method="jsonListPage">
			<result name="success">/jsp/Employee/jsonListPage.jsp</result>
		</action>


		<!-- 数据处理部分 -->
		<action name="add" class="com.parkcharge.car.action.EmployeeAction"
			method="add">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action>
		<action name="del" class="com.parkcharge.car.action.EmployeeAction"
			method="del">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action>
		<action name="edit" class="com.parkcharge.car.action.EmployeeAction"
			method="edit">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action>

		<!-- Json数据部分 -->
		<action name="getJsonList" class="com.parkcharge.car.action.EmployeeAction"
			method="getJsonList">
			<result type="json">
				<param name="root">jsonobj</param>
			</result>
		</action>
		<!-- 根据人员id来获取相应的人员Json信息 -->
		<action name="getJsonEmployeeCarByEmpId" class="com.parkcharge.car.action.EmployeeAction" method="getJsonEmployeeCarByEmpId">
			<result type="json">
				<param name="root">jsonobj</param>
			</result>
		</action>
	</package>
</struts>
