<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.devMode" value="true" />
    <package name="CarCharge" namespace="/CarCharge" extends="struts-global">
		<!-- 页面显示部分 -->
		<action name="addPage" class="com.parkcharge.car.action.CarChargeAction" method="addPage">
			<result name="success">/jsp/CarCharge/addPage.jsp</result>
		</action>
		<action name="editPage" class="com.parkcharge.car.action.CarChargeAction" method="editPage">
			<result name="success">/jsp/CarCharge/editPage.jsp</result>
		</action>
		<action name="jsonListPage" class="com.parkcharge.car.action.CarChargeAction" method="jsonListPage">
			<result name="success">/jsp/CarCharge/jsonListPage.jsp</result>
		</action>
		
		<!-- 缴费管理(用户缴费)(选择用户车辆界面) -->
		<action name="selectEmployeeCarPage" class="com.parkcharge.car.action.CarChargeAction" method="selectEmployeeCarPage">
			<result name="success">/jsp/CarCharge/selectEmployeeCarPage.jsp</result>
		</action>
		
		<!-- 数据处理部分 -->
		<action name="add" class="com.parkcharge.car.action.CarChargeAction" method="add">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action>
		<action name="del" class="com.parkcharge.car.action.CarChargeAction" method="del">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action>
		<action name="edit" class="com.parkcharge.car.action.CarChargeAction" method="edit">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action>
		
		<!-- Json数据部分 -->
		<action name="getJsonList" class="com.parkcharge.car.action.CarChargeAction" method="getJsonList">
			<result type="json">
				<param name="root">jsonobj</param>
			</result>
		</action>
		
    </package>
</struts>
