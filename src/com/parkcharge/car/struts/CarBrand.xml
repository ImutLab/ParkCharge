<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.devMode" value="true" />
    <package name="CarBrand" namespace="/CarBrand" extends="struts-global">
		<!-- 页面显示部分 -->
		<action name="addPage" class="com.parkcharge.car.action.CarBrandAction" method="addPage">
			<result name="success">/jsp/CarBrand/addPage.jsp</result>
		</action>
		<action name="editPage" class="com.parkcharge.car.action.CarBrandAction" method="editPage">
			<result name="success">/jsp/CarBrand/editPage.jsp</result>
		</action>
		<action name="jsonListPage" class="com.parkcharge.car.action.CarBrandAction" method="jsonListPage">
			<result name="success">/jsp/CarBrand/jsonListPage.jsp</result>
		</action>
		
		<!-- 数据处理部分 -->
<!-- 		<action name="add" class="com.parkcharge.car.action.CarBrandAction" method="add">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action> -->
<!-- 		<action name="del" class="com.parkcharge.car.action.CarBrandAction" method="del">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action> -->
<!-- 		<action name="edit" class="com.parkcharge.car.action.CarBrandAction" method="edit">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action> -->
		<!-- 添加默认的车辆品牌 -->
		<action name="addDefaultCarBrand" class="com.parkcharge.car.action.CarBrandAction" method="addDefaultCarBrand">
			<result name="success" type="redirectAction">jsonListPage</result>
		</action>
		
		
		<!-- Json数据部分 -->
		<action name="getJsonList" class="com.parkcharge.car.action.CarBrandAction" method="getJsonList">
			<result type="json">
				<param name="root">jsonobj</param>
			</result>
		</action>
		<!-- 添加车辆品牌，添加成功返回true，添加失败返回false -->
		<action name="add" class="com.parkcharge.car.action.CarBrandAction" method="add">
			<result type="json">
				<param name="root">jsonobj</param>
			</result>
		</action>
		<!-- 删除车辆品牌，删除成功返回true，添加失败返回false -->
		<action name="del" class="com.parkcharge.car.action.CarBrandAction" method="del">
			<result type="json">
				<param name="root">jsonobj</param>
			</result>
		</action>
		<!-- 修改车辆品牌，删除成功返回true，添加失败返回false -->
		<action name="edit" class="com.parkcharge.car.action.CarBrandAction" method="edit">
			<result type="json">
				<param name="root">jsonobj</param>
			</result>
		</action>
		
    </package>
</struts>
